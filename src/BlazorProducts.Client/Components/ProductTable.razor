<table class="table">
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col">Name</th>
            <th scope="col">Supplier</th>
            <th scope="col">Price</th>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        <Virtualize ItemsProvider="LoadProducts" Context="product" ItemSize="300">
            <ItemContent>
                <tr>
                    <td>
                        <a href="/product/@product.Id">
                            <img src="@product.ImageUrl" alt="product image" style="width:100px;" />
                        </a>
                    </td>
                    <td class="align-middle">
                        <a href="/product/@product.Id">
                            @product.Name
                        </a>
                    </td>
                    <td class="align-middle">
                        @product.Supplier
                    </td>
                    <td class="align-middle">
                        @product.Price
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-info" href="/updateProduct/@product.Id">
                            Update
                        </a>
                    </td>
                    <td class="align-middle">
                        <button type="button" class="btn btn-danger" @onclick="() => CallConfirmationModal(product.Id)">Delete</button>
                    </td>
                </tr>
            </ItemContent>
        </Virtualize>
    </tbody>
</table>
<Confirmation 
    OnOKClicked="DeleteProduct"
    BodyMessage="Do you want to delete this product?"
    @ref="confirmation" />