<InputFile OnChange="@HandleSelected" style="display:none;" id="file-upload" />

<button type="button" class="btn btn-info" onclick="document.getElementById('file-upload').click()">
    Select a file
</button>
<span class="image-name">@fileUploadMessage</span>

@if (ImgUrl is not null)
{
    <div>
        <img src="@ImgUrl" class="image-preview" />
    </div>
}